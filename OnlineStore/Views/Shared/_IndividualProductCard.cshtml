@model OnlineStore.Models.Product

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ', '_')">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222; display: flex; flex-direction: column;"> <!-- Added flex styles -->
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label>@Model.Name</label></div>
            <div class="col-5 text-end"><span class="text-info h5">@String.Format("${0:N0}", Model.Price)</span></div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" style="max-height: 200px; object-fit: cover;" src="@WC.ImagePath/@Model.Image" alt="Card image cap"> <!-- Added styles here -->
        <div class="card-body p-1 px-3 row flex-grow-1"> <!-- Added flex-grow-1 -->
            <!-- ... (rest of your code) -->
        </div>
    


        
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-100" style="background-color:lavenderblush; color: black;">@Model.Category.Name</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge p-2 border w-100" style="background-color:aliceblue; color: black;">@Model.ApplicationType.Name</span>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify; color: black;">
                <p>@Model.ShortDescription</p>
            </div>
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
        </div>
    </div>
</div>
